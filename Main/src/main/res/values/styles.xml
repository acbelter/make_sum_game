<resources>
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar.Fullscreen">

    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:textColor">@color/widget_text_color</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="GameFieldButtonStyle" parent="ButtonStyle">
        <item name="android:layout_width">@dimen/game_field_btn_size</item>
        <item name="android:layout_height">@dimen/game_field_btn_size</item>
        <item name="android:layout_margin">@dimen/btn_margin</item>
    </style>

    <style name="LevelItemStyle">
        <item name="android:background">@drawable/level_item_background</item>
        <item name="android:layout_width">@dimen/level_item_size</item>
        <item name="android:layout_height">@dimen/level_item_size</item>
    </style>

    <style name="TextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>
</resources>