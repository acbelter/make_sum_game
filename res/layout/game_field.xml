    <Button
      android:id="@+id/btn_3_0"
      style="@style/GameFieldButtonStyle"
      tools:text="3_0"/>

    <Button
      android:id="@+id/btn_3_1"
      style="@style/GameFieldButtonStyle"
      tools:text="3_1"/>

    <Button
      android:id="@+id/btn_3_2"
      style="@style/GameFieldButtonStyle"
      tools:text="3_2"/>

    <Button
      android:id="@+id/btn_3_3"
      style="@style/GameFieldButtonStyle"
      tools:text="3_3"/>
