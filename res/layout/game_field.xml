    <Button
      android:id="@+id/btn_0_0"
      style="@style/GameFieldButtonStyle"
      tools:text="0_0"/>

    <Button
      android:id="@+id/btn_0_1"
      style="@style/GameFieldButtonStyle"
      tools:text="0_1"/>

    <Button
      android:id="@+id/btn_0_2"
      style="@style/GameFieldButtonStyle"
      tools:text="0_2"/>

    <Button
      android:id="@+id/btn_0_3"
      style="@style/GameFieldButtonStyle"
      tools:text="0_3"/>

    <Button
      android:id="@+id/btn_1_0"
      style="@style/GameFieldButtonStyle"
      tools:text="1_0"/>

    <Button
      android:id="@+id/btn_1_1"
      style="@style/GameFieldButtonStyle"
      tools:text="1_1"/>

    <Button
      android:id="@+id/btn_1_2"
      style="@style/GameFieldButtonStyle"
      tools:text="1_2"/>

    <Button
      android:id="@+id/btn_1_3"
      style="@style/GameFieldButtonStyle"
      tools:text="1_3"/>

    <Button
      android:id="@+id/btn_2_0"
      style="@style/GameFieldButtonStyle"
      tools:text="2_0"/>

    <Button
      android:id="@+id/btn_2_1"
