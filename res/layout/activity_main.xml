<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:layout_gravity="center"
              android:layout_marginLeft="@dimen/menu_btn_margin"
              android:layout_marginRight="@dimen/menu_btn_margin">

    <Button
      android:id="@+id/btn_start"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/start"
      android:onClick="startGame"/>

    <Button
      android:id="@+id/btn_challenge"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/challenge"
      android:onClick="startChallenge"/>

    <Button
      android:id="@+id/btn_high_score"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/high_score"
      android:onClick="showHighScore"/>

    <Button
      android:id="@+id/btn_settings"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/settings"
      android:onClick="showSettings"/>

    <Button
      android:id="@+id/btn_exit"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/exit"
      android:onClick="exit"/>
</LinearLayout>

